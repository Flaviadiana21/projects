<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/forumBlue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100px"
        android:layout_marginTop="50px"
        android:text=" Flight details"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100px"
        android:text="Destination : Marseille"
        android:textColor="#000000"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100px"
        android:text="Travel dates : 15 nov - 20 nov 2019"
        android:textColor="#000000"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100px"
        android:text="Accomodation : -"
        android:textColor="#000000"
        android:textSize="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="100px"
        android:layout_marginRight="140px"
        android:layout_marginTop="50px"
        android:background="#cccccc"/>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:text="Carry-On"
        android:layout_marginLeft="450px"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="match_parent"
        android:layout_height="300px"
        app:srcCompat="@drawable/backpack" />

    <Button
        android:id="@+id/button8"
        android:layout_width="280px"
        android:layout_height="100px"
        android:layout_marginLeft="400px"
        android:onClick="goMakeCarry"
        android:text="Make" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:layout_marginTop="30px"
        android:background="#cccccc"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:text="Cheked"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="450px"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="match_parent"
        android:layout_height="400px"
        app:srcCompat="@drawable/suitcase" />

    <Button
        android:id="@+id/button9"
        android:layout_width="280px"
        android:layout_height="100px"
        android:layout_marginLeft="400px"
        android:text="Make"
        android:onClick="goMakeChecked"/>

</LinearLayout>